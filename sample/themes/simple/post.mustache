{{> _html_header }}

<div class="columns">
    <div class="column col-6 centered">

        <div class="container">
            <h3>{{ title }}</h3>

            {{# pubdate }}
                <p>Published: <time id="pub-time" class="tooltip tooltip-bottom" data-tooltip="{{ pubdateHint }}">{{ pubdateHint }}</time></p>
            {{/ pubdate }}

            {{ content }}
        </div>

    </div>
</div>

<script>
    document.getElementById('pub-time').innerHTML = moment('{{ pubdate }}', 'YYYY-MM-DD').fromNow()
</script>

{{> _html_footer }}